<?xml version="1.0" encoding="utf-8"?>
<com.mj.android_note.ui.widget.MagicStatusBarRootLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:statusColor="#e0e0e0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#eeeeee"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/header_back"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:paddingBottom="13dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp"
            android:src="@drawable/selector_back" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/header_more"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/selector_more" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/db_main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

